{
  "name": "Open in JIRA",
  "version": "1.0",
  "description": "Put in an issue number or comma separated numbers and open in JIRA. ",
  "icons": {
     "16": "icons/icon16.png",
     "48": "icons/icon48.png",
     "128": "icons/icon128.png"
   },
  "permissions": [
    "tabs"
  ],
  "background": {
    "scripts": ["tabs.js"],
    "persistent": false
  },
  "browser_action": {
      "default_title": "Open in JIRA"
  },
  "manifest_version": 2,
  "content_security_policy": "script-src 'self'; object-src 'self'"
}
